<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kütüphane Sistemi</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        /* Header */
        .header {
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .header h1 {
                margin: 0;
                font-size: 24px;
            }

        /* Container */
        .container-wrapper {
            display: flex;
            min-height: calc(100vh - 140px);
        }

        /* Sol Menü */
        .sidebar {
            width: 250px;
            background-color: #34495e;
            color: white;
            padding: 20px 0;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            .sidebar h3 {
                padding: 0 20px 15px;
                border-bottom: 2px solid #2c3e50;
                margin-bottom: 15px;
                font-size: 18px;
                color: #3498db;
            }

        .menu-section {
            margin-bottom: 25px;
        }

            .menu-section:last-child {
                margin-bottom: 0;
            }

        .sidebar ul {
            list-style: none;
        }

            .sidebar ul li {
                margin: 0;
            }

                .sidebar ul li a {
                    display: block;
                    color: #ecf0f1;
                    text-decoration: none;
                    padding: 12px 20px;
                    transition: all 0.3s ease;
                    border-left: 3px solid transparent;
                }

                    .sidebar ul li a:hover {
                        background-color: #2c3e50;
                        border-left-color: #3498db;
                        padding-left: 25px;
                    }

                    .sidebar ul li a.active {
                        background-color: #2c3e50;
                        border-left-color: #e74c3c;
                        font-weight: bold;
                    }

        /* Ana İçerik */
        .main-content {
            flex: 1;
            padding: 30px;
            background-color: white;
            margin: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        /* Footer */
        .footer {
            background-color: #2c3e50;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: auto;
        }

        /* Responsive */
        .media (max-width: 768px) {
            .container-wrapper {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
            }

            .main-content {
                margin: 10px;
                padding: 15px;
            }
        }

        /* Kategori İkonları (isteğe bağlı) */
        .sidebar ul li a::before {
            content: "📚 ";
            margin-right: 8px;
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>📚 Kütüphane Yönetim Sistemi</h1>
    </div>

    <!-- Ana Container -->
    <div class="container-wrapper">
        <!-- Sol Menü -->
        <aside class="sidebar">
            <!-- Ana Sayfa -->
            <div class="menu-section">
                <h3>Ana Menü</h3>
                <ul>
                    <li>@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>
                </ul>
            </div>

            <!-- Kategoriler -->
            <div class="menu-section">
                <h3>Kategoriler</h3>
                <ul>
                    <li>@Html.ActionLink("Kategori Listesi", "Index", "Category")</li>
                    <li>@Html.ActionLink("Kategori Ekle", "Create", "Category")</li>
                    <li>@Html.ActionLink("Kategori Düzenle", "Edit", "Category")</li>
                </ul>
            </div>

            <!-- Kitaplar -->
            <div class="menu-section">
                <h3>Kitaplar</h3>
                <ul>
                    <li>@Html.ActionLink("Tüm Kitaplar", "Index", "Books")</li>
                    <li>@Html.ActionLink("Kitap Ekle", "Create", "Books")</li>
                    <li>@Html.ActionLink("Kitap Ara", "Search", "Books")</li>
                </ul>
            </div>

            <div class="menu-section">
                <h3>Yayın Evleri</h3>
                <ul>
                    <li>@Html.ActionLink("Yayın Evi Listesi", "Index", "Publishers")</li>
                    <li>@Html.ActionLink("Yayın Evi Ekle", "Create", "Publishers")</li>
                    <li>@Html.ActionLink("Yayın Evi Düzenle", "Edit", "Publishers")</li>
                </ul>
            </div>

            <!-- Üyeler -->
            <div class="menu-section">
                <h3>Üyeler</h3>
                <ul>
                    <li>@Html.ActionLink("Üye Listesi", "Index", "Members")</li>
                    <li>@Html.ActionLink("Üye Ekle", "Create", "Members")</li>
                    <li>@Html.ActionLink("Üye Ara", "Search", "Members")</li>
                </ul>
            </div>

            <!-- Ödünç İşlemleri -->
            <div class="menu-section">
                <h3>Ödünç İşlemleri</h3>
                <ul>
                    <li>@Html.ActionLink("Ödünç Ver", "Lend", "Loans")</li>
                    <li>@Html.ActionLink("İade Al", "Return", "Loans")</li>
                    <li>@Html.ActionLink("Aktif Ödünçler", "Active", "Loans")</li>
                    <li>@Html.ActionLink("Geciken Kitaplar", "Overdue", "Loans")</li>
                    <li>@Html.ActionLink("İşlem Geçmişi", "History", "Loans")</li>
                </ul>
            </div>
        </aside>

        <!-- Ana İçerik Alanı -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - Kütüphane Yönetim Sistemi. Tüm hakları saklıdır.</p>
    </footer>

    <!-- ÖNCE JQUERY VE BOOTSTRAP YÜKLENMELİ -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SONRA SAYFA SCRIPT'LERİ -->
    @RenderSection("scripts", required: false)
</body>
</html>