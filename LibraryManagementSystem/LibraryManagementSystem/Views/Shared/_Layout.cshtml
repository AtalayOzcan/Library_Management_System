<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Library System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        /* Header */
        .header {
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .header h1 {
                margin: 0;
                font-size: 24px;
            }

        /* Container */
        .container-wrapper {
            display: flex;
            min-height: calc(100vh - 140px);
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #34495e;
            color: white;
            padding: 20px 0;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            .sidebar h3 {
                padding: 0 20px 15px;
                border-bottom: 2px solid #2c3e50;
                margin-bottom: 15px;
                font-size: 18px;
                color: #3498db;
            }

        .menu-section {
            margin-bottom: 25px;
        }

            .menu-section:last-child {
                margin-bottom: 0;
            }

        .sidebar ul {
            list-style: none;
        }

            .sidebar ul li {
                margin: 0;
            }

                .sidebar ul li a {
                    display: block;
                    color: #ecf0f1;
                    text-decoration: none;
                    padding: 12px 20px;
                    transition: all 0.3s ease;
                    border-left: 3px solid transparent;
                }

                    .sidebar ul li a:hover {
                        background-color: #2c3e50;
                        border-left-color: #3498db;
                        padding-left: 25px;
                    }

                    .sidebar ul li a.active {
                        background-color: #2c3e50;
                        border-left-color: #e74c3c;
                        font-weight: bold;
                    }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 30px;
            background-color: white;
            margin: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        /* Footer */
        .footer {
            background-color: #2c3e50;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: auto;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .container-wrapper {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
            }

            .main-content {
                margin: 10px;
                padding: 15px;
            }
        }

        .sidebar ul li a::before {
            content: "📚 ";
            margin-right: 8px;
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>📚 Library Management System</h1>
    </div>

    <!-- Main Container -->
    <div class="container-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">

            <!-- Main Menu -->
            <div class="menu-section">
                <h3>Main Menu</h3>
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>

            <!-- Categories -->
            <div class="menu-section">
                <h3>Categories</h3>
                <ul>
                    <li>@Html.ActionLink("Category List", "Index", "Category")</li>
                    <li>@Html.ActionLink("Add Category", "Create", "Category")</li>
                </ul>
            </div>

            <!-- Books -->
            <div class="menu-section">
                <h3>Books</h3>
                <ul>
                    <li>@Html.ActionLink("All Books", "Index", "Books")</li>
                    <li>@Html.ActionLink("Add Book", "Create", "Books")</li>
                    <li>@Html.ActionLink("Search Book", "Search", "Books")</li>
                </ul>
            </div>

            <!-- Publishers -->
            <div class="menu-section">
                <h3>Publishers</h3>
                <ul>
                    <li>@Html.ActionLink("Publisher List", "Index", "Publishers")</li>
                    <li>@Html.ActionLink("Add Publisher", "Create", "Publishers")</li>
                </ul>
            </div>

            <!-- Members -->
            <div class="menu-section">
                <h3>Members</h3>
                <ul>
                    <li>@Html.ActionLink("Member List", "Index", "Members")</li>
                    <li>@Html.ActionLink("Add Member", "Create", "Members")</li>
                    <li>@Html.ActionLink("Search Member", "Search", "Members")</li>
                </ul>
            </div>

            <!-- Loan Operations -->
            <div class="menu-section">
                <h3>Loan Operations</h3>
                <ul>
                    <li>@Html.ActionLink("Lend Book", "Lend", "Loans")</li>
                    <li>@Html.ActionLink("Return Book", "Return", "Loans")</li>
                    <li>@Html.ActionLink("Active Loans", "Active", "Loans")</li>
                    <li>@Html.ActionLink("Overdue Books", "Overdue", "Loans")</li>
                    <li>@Html.ActionLink("Loan History", "History", "Loans")</li>
                </ul>
            </div>

        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; @DateTime.UtcNow.Year - Library Management System. All rights reserved.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
