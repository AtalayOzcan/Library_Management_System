@using LibraryManagementSystem.Models
@using LibraryManagementSystem.Controllers
@model ICollection<Book>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Books</h2>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="py-3">ISBN</th>
                            <th class="py-3">Title</th>
                            <th class="py-3">Author</th>
                            <th class="py-3">Publish Year</th>
                            <th class="py-3">Page Count</th>
                            <th class="py-3">Category</th>
                            <th class="py-3">Publisher</th>
                            <th class="py-3">Available</th>
                            <th class="py-3">Description</th>
                            <th class="py-3 text-center" style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td class="fw-semibold align-middle">@x.ISBN</td>
                                    <td class="text-muted align-middle">@x.Title</td>
                                    <td class="text-muted align-middle">@x.Author</td>
                                    <td class="text-muted align-middle">@x.PublishYear</td>
                                    <td class="text-muted align-middle">@x.PageCount</td>
                                    <td class="text-muted align-middle">@x.Category.CategoryName</td>
                                    <td class="text-muted align-middle">@x.Publisher.PublisherName</td>
                                    <td class="text-muted align-middle">@x.IsAvailable</td>
                                    <td class="text-muted align-middle">@x.Description</td>
                                    <td class="text-center align-middle">

                                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@x.BookId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure want to delete?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    No Book found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-3">
        <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add New Book
        </a>
    </div>
</div>