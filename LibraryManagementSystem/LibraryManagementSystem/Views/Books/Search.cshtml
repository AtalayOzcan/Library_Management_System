@using LibraryManagementSystem.Models
@model List<Book>

<div class="container mt-5">

    <div class="card shadow mb-4">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">Advanced Book Search</h3>
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">ISBN</label>
                        <input type="text" name="isbn" value="@ViewBag.Isbn" class="form-control" placeholder="ISBN..." maxlength="13" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Book Title</label>
                        <input type="text" name="bookTitle" value="@ViewBag.BookTitle" class="form-control" placeholder="Book Name..." />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Author</label>
                        <input type="text" name="author" value="@ViewBag.Author" class="form-control" placeholder="Author Name..." />
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Search" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Search Results (@Model.Count record found)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>ISBN</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Publisher</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.ISBN</td>
                                    <td class="fw-bold">@x.Title</td>
                                    <td>@x.Author</td>
                                    <td>@x.Category?.CategoryName</td>
                                    <td>@x.Publisher?.PublisherName</td>
                                    <td>
                                        @if (x.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Out of Stock</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@x.BookId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediğine emin misin?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (Model != null && ViewBag.Isbn != null)
    {
        // Arama yapılmış ama sonuç boş dönmüşse uyarı ver
        <div class="alert alert-warning text-center mt-4">
            <i class="bi bi-search fs-4 d-block mb-2"></i>
            <strong>No books found matching your criteria!</strong>
        </div>
    }
</div>