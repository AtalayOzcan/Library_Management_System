@*Search Members*@
@using LibraryManagementSystem.Models
@model List<Member>

<div class="container mt-5">

    <div class="card shadow mb-4">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">Advanced Member Search</h3>
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Member Number</label>
                        <input type="text" name="memberNumber" value="@ViewBag.MemberNumber" class="form-control" placeholder="Member Number..." maxlength="8" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Member Name</label>
                        <input type="text" name="name" value="@ViewBag.Name" class="form-control" placeholder="Member Name..." />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="text" name="email" value="@ViewBag.Email" class="form-control" placeholder="Email..." />
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Search" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Search Results (@Model.Count record found)</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Member Number</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Registration Date</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.MemberNumber</td>
                                    <td class="fw-bold">@x.FirstName @x.LastName</td>
                                    <td>@x.Email</td>
                                    <td>@x.RegistrationDate</td>
                                    <td>
                                        @if (x.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Not Active</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Members" asp-action="Delete" asp-route-id="@x.MemberId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediğine emin misin?');">
                                            <i class="bi bi-trash"></i>Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (ViewBag.MemberNumber != null || ViewBag.name != null || ViewBag.email != null)
    {
        // Arama yapılmış ama sonuç boş dönmüşse uyarı ver
        <div class="alert alert-warning text-center mt-4">
            <i class="bi bi-search fs-4 d-block mb-2"></i>
            <strong>No Member found matching your criteria!</strong>
        </div>
    }
</div>