@using LibraryManagementSystem.Models
@model Member

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Member</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Members" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label fw-semibold">First Name</label>
                            <input asp-for="FirstName" class="form-control fw-semibold" placeholder="Enter First Name"/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label fw-semibold">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name"/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" class="form-control fw-semibold" placeholder="Enter Email"/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Phone</label>
                            <input asp-for="Phone" class="form-control fw-semibold" placeholder="Enter Phone Number" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-semibold">Address</label>
                            <input asp-for="Address" class="form-control fw-semibold" placeholder="Enter Address" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="BirthDate" class="form-label fw-semibold">Birth Date</label>
                            <input asp-for="BirthDate" type="date" class="form-control fw-semibold" placeholder="Enter Birth Date" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsActive" class="form-label fw-semibold">Is Active</label>
                            <select asp-for="IsActive" class="form-control fw-semibold">
                                <option value="">-- Select(T/F) --</option>
                                <option value="true">Active</option>
                                <option value="false">Not Active</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-semibold">Note</label>
                            <input asp-for="Notes" class="form-control fw-semibold" placeholder="You Can Add Note" />
                        </div>


                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                            <a asp-controller="Books" asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>