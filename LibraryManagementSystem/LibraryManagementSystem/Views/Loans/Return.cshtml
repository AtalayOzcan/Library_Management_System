@model List<LibraryManagementSystem.Models.Loan>

@{
    ViewBag.Title = "Return Book";
}

<div class="container mt-4">
    <h3 class="mb-3">Return Book</h3>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No active loans to return.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Member</th>
                            <th>Book</th>
                            <th>Loan Date</th>
                            <th>Due Date</th>
                            <th>Late Days</th>
                            <th>Fine</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model)
                        {
                            @*Return Calculator*@
                            bool isOverdue = DateTime.UtcNow > loan.DueDate;
                            int lateDays = isOverdue ? (int)(DateTime.UtcNow - loan.DueDate).TotalDays : 0;
                            decimal fine = lateDays * 100;

                            <tr class="@(isOverdue ? "table-danger" : "")">
                                <td>@loan.LoanId</td>
                                <td>
                                    <strong>@loan.Member.FirstName @loan.Member.LastName</strong>
                                    <br />
                                    <small class="text-muted">@loan.Member.MemberNumber</small>
                                </td>
                                <td>
                                    <strong>@loan.Book.Title</strong>
                                    <br />
                                    <small class="text-muted">@loan.Book.Author</small>
                                </td>
                                <td>@loan.LoanDate.ToString("dd.MM.yyyy")</td>
                                <td>@loan.DueDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (isOverdue)
                                    {
                                        <span class="text-danger fw-bold">@lateDays days</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">-</span>
                                    }
                                </td>
                                <td>
                                    @if (fine > 0)
                                    {
                                        <span class="text-danger fw-bold">@fine ₺</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">-</span>
                                    }
                                </td>
                                <td>
                                    @*Return Button*@
                                    <form asp-controller="Loans" asp-action="Return" method="post" style="display:inline">
                                        <input type="hidden" name="LoanId" value="@loan.LoanId" />
                                        <button type="submit" class="btn btn-sm btn-success">Return</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
