
@{
    ViewBag.Title = "Lend Book";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Lend Book</h4>
                </div>
                <div class="card-body p-4">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form asp-controller="Loans" asp-action="Lend" method="post">

                        @* Member dropdown *@
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Select Member</label>
                            <select name="MemberId" class="form-control" required>
                                <option value="">-- Select Member --</option>
                                @foreach (var member in ViewBag.Members)
                                {
                                    <option value="@member.MemberId">
                                        @member.MemberNumber - @member.FirstName @member.LastName
                                    </option>
                                }
                            </select>
                        </div>

                        @*Book Dropdown*@
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Select Book</label>
                            <select name="BookId" class="form-control" required>
                                <option value="">-- Select Book --</option>
                                @foreach (var book in ViewBag.Books)
                                {
                                    <option value="@book.BookId">
                                        @book.Title - @book.Author (Stock: @book.StockCount)
                                    </option>
                                }
                            </select>
                            <small class="text-muted">Only books in stock are listed.</small>
                        </div>

                        @* Dates automatic, cannot change users *@
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Loan Date</label>
                                <input type="text" class="form-control bg-light"
                                       value="@DateTime.Now.ToString("dd.MM.yyyy")" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Due Date</label>
                                <input type="text" class="form-control bg-light"
                                       value="@DateTime.Now.AddDays(14).ToString("dd.MM.yyyy")" readonly />
                                <small class="text-muted">Must be returned in 14 days.</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success px-4">Lend Book</button>
                            <a asp-controller="Loans" asp-action="Active" class="btn btn-secondary px-4">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>