@model List<LibraryManagementSystem.Models.Loan>

@{
    ViewBag.Title = "Loan History";
}

<div class="container mt-4">
    <h3 class="mb-3">Loan History</h3>

    @*Filter Form*@
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-controller="Loans" asp-action="History" method="get">
                <div class="row">

                    @*Filter by Member Name*@
                    <div class="col-md-5">
                        <label class="form-label fw-semibold"> Search by Member</label>
                        <input type="text" name="memberFilter" class="form-control" placeholder="First name or last name..." value="@ViewBag.MemberFilter" />
                    </div>

                    @*Filter by month*@
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Filter by Month</label>
                        <input type="month" name="dateFilter" class="form-control" value="@ViewBag.DateFilter" />
                    </div>

                    <div class="col-md-3 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary w-50">Filter</button>
                        <a asp-controller="Loans" asp-action="History" class="btn btn-outline-secondary w-50">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="mb-2">
        <small class="text-muted">Showing @Model.Count record(s)</small>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No records found.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Member</th>
                            <th>Book</th>
                            <th>Loan Date</th>
                            <th>Due Date</th>
                            <th>Return Date</th>
                            <th>Late Days</th>
                            <th>Fine</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loan in Model)
                        {
                            <tr>
                                <td>@loan.LoanId</td>
                                <td>@loan.Member.FirstName @loan.Member.LastName</td>
                                <td>@loan.Book.Title</td>
                                <td>@loan.LoanDate.ToString("dd.MM.yyyy")</td>
                                <td>@loan.DueDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @* ReturnDate can be null*@
                                    @if (loan.ReturnDate.HasValue)
                                    {
                                        @loan.ReturnDate.Value.ToString("dd.MM.yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not returned</span>
                                    }
                                </td>
                                <td>
                                    @if (loan.LateDays > 0)
                                    {
                                        <span class="text-danger">@loan.LateDays</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (loan.Fine > 0)
                                    {
                                        <span class="text-danger">@loan.Fine $</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @* Isreturned? or IsActive? *@
                                    @if (loan.IsReturned)
                                    {
                                        <span class="badge bg-success">Returned</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Active</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>