@using LibraryManagementSystem.Models
@model Publisher

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Publisher</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Publishers" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="PublisherName" class="form-label fw-semibold">Publisher Name</label>
                            <input asp-for="PublisherName" class="form-control" placeholder="Enter Publisher name" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                            <a asp-controller="Publishers" asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>