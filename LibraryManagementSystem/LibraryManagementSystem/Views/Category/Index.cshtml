@using LibraryManagementSystem.Models
@using LibraryManagementSystem.Controllers
@model ICollection<Category>

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Categories</h2>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="py-3">Category Name</th>
                            <th class="py-3">Description</th>
                            <th class="py-3">Created Time</th>
                            <th class="py-3 text-center" style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td class="fw-semibold align-middle">@x.CategoryName</td>
                                    <td class="text-muted align-middle">@x.Description</td>
                                    <td class="text-muted align-middle">@x.CreatedDate</td>

                                    <td class="text-center align-middle">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@x.CategoryId" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>

                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@x.CategoryId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure want to delete?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    No categories found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-3">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Add New Category
        </a>
    </div>
</div>