@using LibraryManagementSystem.Models
@model ICollection<Category>

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Categories</h2>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="py-3">Category Name</th>
                            <th class="py-3">Description</th>
                            <th class="py-3">Created Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td class="fw-semibold align-middle py-3">@x.CategoryName</td>
                                    <td class="text-muted align-middle py-3">@x.Description</td>
                                    <td class="text-muted align-middle py-3">@x.CreatedDate</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center py-5 text-muted">
                                    No categories found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>