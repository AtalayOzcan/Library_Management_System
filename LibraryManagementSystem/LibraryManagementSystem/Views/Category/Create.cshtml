@using LibraryManagementSystem.Models
@model Category

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Category</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Category" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="CategoryName" class="form-label fw-semibold">Category Name</label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter category description"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4" >Save</button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>