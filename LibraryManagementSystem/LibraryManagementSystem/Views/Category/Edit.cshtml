@using LibraryManagementSystem.Models
@model Category

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-warning text-white">
            <h3>Category Update Screen</h3>
        </div>
        <div class="card-body">
            <form method="post">
                
                <input type="hidden" asp-for="CategoryId" />

                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label fw-semibold">Category Name</label>
                    <input type="text" asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                </div>

                <button type="submit" class="btn btn-warning">Save Changes</button>
                <a href="/Category/Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>